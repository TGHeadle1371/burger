<div class="container text-center">
    <div class="row mt-5">
        <div class="col-lg-12 center mb-5">
            <h1>Eat Da Burger</h1>
            <br>
            <h3>Go ahead!</h3>
            <h3 id="image">
                <iframe src="https://giphy.com/embed/26gJyPArz29MiOYSI" width="500" height="300" frameBorder="0"
                    class="giphy-embed" allowFullScreen></iframe>
            </h3>
        </div>
    </div>

    <form class="create-form mb-2">

        <div class="form-group">
            <label for="newBurger">Add a burger: </label>
            <input type="text" id="newBurger" name="burger">
            <button type="submit" id="addBurger" class="btn btn-success">Add</button>
        </div>
        &nbsp;

    </form>

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading m-2">
                    <h3>New Burgers</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-primary text-white" id="eatbutton"
                            data-id="{{this.id}}" data-newDevoured="{{devour}}">Devour
                        </button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading m-2" id="righthead">
                    <h3>Devoured Burgers</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger text-white" id="trashbutton"
                            data-id="{{this.id}}" data-newDevoured="{{devour}}">Delete</button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="row mt-5 pb-2">
            <div class="col-sm-12">
                <footer>
                    Copyright &copy; Thomas Headle 2019
                </footer>
            </div>
        </div>
    </div>
</div><!-- /row -->