<div class="container">

    {{!-- <div class="row" id="image">
        <img src="../../assets/burgerPattern.jpg" alt="drawing of a burger">
    </div> --}}

    <div class="row">
        <h1>Burger Crusher</h1>
    </div>


    <h3>Eat-Da-Burger!</h3>
    <form class="create-form">

        <div class="form-group">
            <label for="newBurger">Add a burger you'd like to eat:</label>
            <input type="text" id="newBurger" name="burger">
            <button type="submit" id="addBurger" class="btn btn-success">Add Burger</button>
        </div>
        &nbsp;

    </form>

    <div class="row"></div>
    <!-- Undevoured Burgers -->
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
                    <hr>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <!-- Devoured Burgers -->
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                    <hr>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div><!-- /row -->

<button class="devour" data-id="{{this.id}}" data-newsleep="{{devoured}}">Devour It!</button>

</div>