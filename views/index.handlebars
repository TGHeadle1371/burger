<div class="container text-center">
    <div class="row">
        <div class="col-lg-12 center mb-5">
            <h1>Eat Da Burger</h1>
            <br>
            <h3>Go ahead!</h3>
        </div>
    </div>

    <form class="create-form mb-2">

        <div class="form-group">
            <label for="newBurger">Add a burger: </label>
            <input type="text" id="newburger" name="burger">
            <button type="submit" id="addBurger" class="btn btn-success">Add</button>
        </div>
        &nbsp;

    </form>

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading m-2" id="lefthead"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-primary" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><i class="fa fa-cutlery" aria-hidden="true"></i>
                        </button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading m-2" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <button class="devour mt-2" data-id="{{this.id}}" data-devouredState="{{devoured}}">Devour It!</button>

</div><!-- /row -->